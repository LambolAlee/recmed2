{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Recmed2 Launcher",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "CWPlugin Runner",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/contentwidget",
            "module": "${input:pluginModule}",
            "console": "integratedTerminal"
        }
    ],
    "inputs": [
        {
            "id": "pluginModule",
            "type": "promptString",
            "description": "Enter the module format of the plugin like: a.b.c.d",
            "default": "plugins.core.tcmformular.test"
        }
    ]
}